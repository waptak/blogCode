 <nav class="nav">

  
     <% if (page.prev) { %>
      <div class="nav-prev">
        <a class="nav-link" href="<%- url_for(page.prev.path) %>">  
           <li class="li iconfont icon-left"></li>         
            <% var title = truncate(page.prev.title , {length:60}) %>  
          <span class="nav-title"><%= title || '(no title)' %></span>
        </a>
      </div>
    <% } %>



    <% if (page.next) { %>
       <div class="nav-next">      
        <a  class="nav-link" href="<%- url_for(page.next.path) %>">      

         <% var title = truncate(page.next.title, {length:60}) %>    
         <span class="nav-title"><%= title || '(no title)' %></span>
          <li class="li iconfont icon-right"></li>
        </a>
        </div>
    <% } %>

</nav>  