 .header
  clear both 
  width 100%
  z-index 30
  border-bottom 1px solid $line-clr
  
.header-nav   
  height 70px 
  width 72% 
  margin 0 auto
  display flex  
  align-items center
  justify-content space-between
    
.header-logo   
    @extend $close
    position relative
    display inline-block
    line-height 70px
    color $black   
    font-size 24px
    margin 0 10%
    text-align center  
    font-family $logo-font 
    &:visited,&:active
      color $black
    &:hover 
      color $main-clr
     
.header-menu
    height 100%
    margin-right 1%
    display flex
    justify-content center
    align-items center
 
.header-menu-link  
    margin 0 .8em
    height 100%
    display inline-block  
    line-height 70px
    font-size 15px
    letter-spacing .3px
    &:visited,&:active
      color #565a5f
    &:hover
      color $thr-clr 
      
//mobile menu 
.mobile-toggle
  display none
  position absolute
  margin 0  auto
  padding 0
  left 20px
  top 10px
  width 20px
  margin-left -10px




.mobile-menu
  display none
  position fixed
  left 0
  top 0    
  width 200px
  height 100%
  background-color $bgr
  z-index 999 
  overflow-y auto
  padding-top 26px
  text-align center
  border-right  1px solid $line-clr
.mobile-menu-link
  display block
  padding 18px 14px
  font-size 1.1rem
  line-height 1
  letter-spacing .4px
  color #565a5f
.slide-icon
  margin 22px
  width 40px    

//////////js  
.header-static
  position static
  opacity 1
  background-color $bgr  
  border-radius 10px  
.header-fixed
  position fixed
  top 0
  left 0
  opacity 0.8
  background-color $white 
  transition .6   
.header-menu-active  
  border-bottom 2px solid $main-clr
  &:visited,&:active
      color $main-clr
   