//article
.article
  @extend $block 
  padding 1em 0
  padding-top 0
  margin-bottom 4rem
  overflow hidden  
  border-bottom 1px solid $line-clr     
  border-radius 10px         
.article-header 
  margin 0 auto
  padding 20px 
  border-left 1.7px solid $gray
  border-bottom .9px solid $line-clr 
  margin-bottom .6em
  display -webkit-flex
  display flex
  justify-content space-between
  &:hover
    border-left 3px solid $main-clr
    color $main-clr   
    
.article-title         
    font-size 1.4em  
    max-width 86%
    font-family $post-title-font 
    font-weight $font-blod 
    &:visited,&:active
      color $black 
    &:hover
      color $main-clr
.article-excerpt
    padding .5em
    margin 1em 0
    height 100%  
    font-size 15px
    line-height 1.6
    opacity .9
    text-align justify    
    &:hover
      color $main-clr
.article-excerpt p
    letter-spacing .2px
    font-size 16px
    margin 16px 0
    line-height 1.4     
.article-excerpt p a
  @extend $close
  color $thr-clr  
  position relative   
  &:hover    
    color $sub-clr 
  

.article-readmore
    @extend $close
    position relative
    float right   
    padding-bottom 5px
    margin  .4em .9em 
    font-size 1rem    
    &:hover
      color $main-clr   
  
.gallery-box
    display inline-block
    width 175px
    height auto    
.gallery-brg    
    @extend $img_radius 
    display block
    width 175px
    height 175px
    overflow hidden
    background-size cover
    background-position center
.gallery-img
    visibility hidden
    width 100%
    height 100%